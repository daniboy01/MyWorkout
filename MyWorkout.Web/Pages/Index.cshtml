@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="row">
    @foreach(var category in Model.CategoryHeaders)
     {
    <div class="col-md-4">
        <a asp-page="/WorkoutPlans/Details" asp-route-id="@category.Id">
            <h4 class="text-center">@category.Name</h4>
            <img src="~/images/category_covers/@(category.Id).jpg" />
        </a>
    </div>           
     }
</div>
